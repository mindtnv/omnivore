# =============================================================================
# Omnivore Self-Hosting Configuration for Coolify
# =============================================================================
# Copy this file to .env and update the values below.
# Variables marked with [REQUIRED] must be set before deployment.
# =============================================================================

# -----------------------------------------------------------------------------
# [REQUIRED] URLs - Set these to your actual domain
# -----------------------------------------------------------------------------
# Main frontend URL (what users will see in browser)
CLIENT_URL=https://omnivore.yourdomain.com

# API server URL (usually same domain with /api or separate subdomain)
SERVER_BASE_URL=https://omnivore.yourdomain.com

# Image proxy URL (can be same domain with path or separate subdomain)
IMAGE_PROXY_URL=https://omnivore.yourdomain.com/images

# MinIO public URL for file access (can be same domain with path or separate)
LOCAL_MINIO_URL=https://omnivore.yourdomain.com/bucket

# -----------------------------------------------------------------------------
# [REQUIRED] Secrets - Generate unique values for production!
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
SSO_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
IMAGE_PROXY_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
VERIFICATION_TOKEN=CHANGE_ME_generate_with_openssl_rand_hex_32

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_strong_password
POSTGRES_DB=omnivore

# Application database user (created by migrate service)
PG_USER=app_user
PG_PASSWORD=CHANGE_ME_strong_password
PG_POOL_MAX=20

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage) Configuration
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=CHANGE_ME_strong_password

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment: local, staging, prod
API_ENV=local

# Auto-verify user emails (set to false if you have email configured)
AUTO_VERIFY=true
